{% set flash = _view.loadHelper('Flash') %}

<section class="login">
    <div class="container">
        <div class="row">
            <div class="login__block col-12 d-flex flex-column align-items-center justify-content-center">
                <h1 class="login__title title">Вход</h1>
                {{ flash.render() }}
                {{ form.create('User', {'url': {'plugin' : 'users','controller' : 'users', 'action' : 'login'}, 'id': 'UsersLogin', 'class': 'login__form d-flex flex-column'}) }}
                    {{ form.input('username', {
                        'div': false,
                        'id': 'UserUsername',
                        'class': 'login__input grey-input text-xl-center text-lg-center text-md-center text-sm-center text-start',
                        'type': 'text',
                        'required': true,
                        'label': false,
                        'empty': true,
                        'placeholder': 'Номер телефона',
                        'data-allow-clear': true,
                        'searchField': false,
                        'hiddenField': false,
                        'multiple': false,
                    }) }}
                    {{ form.input('password', {
                        'div': false,
                        'id': 'UserPassword',
                        'class': 'login__input grey-input text-xl-center text-lg-center text-md-center text-sm-center text-start',
                        'type': 'password',
                        'required': true,
                        'label': false,
                        'empty': true,
                        'placeholder': 'Пароль',
                        'data-allow-clear': true,
                        'searchField': false,
                        'hiddenField': false,
                        'multiple': false,
                    }) }}
                    <button type="submit" class="login__btn blue-btn">Вход</button>
                {{ form.end() }}
                <a href="/register"
                   class="login__registration d-xl-flex d-lg-flex d-md-flex d-sm-flex d-none align-items-center">
                    <span class="login__registr grey-text">Зарегистрироваться</span>
                    <svg width="11" height="17" viewBox="0 0 22 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M3.49023 38L22 19L3.49023 1.59856e-06L-3.04578e-06 3.58267L15.0195 19L-3.1705e-07 34.4173L3.49023 38Z"
                              fill="#929292" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
